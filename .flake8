[flake8]
# Allow longer lines for docstrings and comments (120 is common for larger projects)
max-line-length = 120

# Ignore errors that conflict with black
extend-ignore =
    # E203: whitespace before ':' (black adds this for slice notation)
    E203,
    # W503: line break before binary operator (black prefers this)
    W503,

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .flask_session,

# Per-file ignores (if needed)
# per-file-ignores =
#     __init__.py: F401
